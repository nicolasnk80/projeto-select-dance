<Manager>:
    Home:
        name: "home"
    Dance:
        name: "dance"

<Home>:
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/fundo2.jpg"
    MDLabel:
        text: "Aguarde..."
        halign: "center"
        pos_hint: {"center_y": .8}
        font_size: 30
        bold: True

<Dance>:
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: [1, 1, 1, .3]
            Rectangle:
                pos: self.pos
                size: self.size
                source: "data/fundo.jpg"
        MDRaisedButton:
            id: btn
            text: "Start"
            size_hint_x: .5
            pos_hint: {"center_x": .5, "center_y": 0.15}
            on_release: root.start_process(img)
            elevation: 20
        MyImg:
            id: img
            source: "data/clock.png"
            allow_stretch: True
            size_hint_x: .5
            pos_hint: {"center_x": .5}
        MDLabel:
            id: myTitle
            text: "Clique em Start"
            bold: True
            italic: True
            font_size: 25
            pos_hint: {"center_y": 0.8}
            halign: 'center'
<MyImg@Image>:
    angle: 0
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.center
    canvas.after:
        PopMatrix
